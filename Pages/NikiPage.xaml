<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlyoutTabNavPrefi.Pages.NikiPage"
             Title="Niki">
    <ScrollView>
        <VerticalStackLayout 
        BackgroundColor="#48282B">

            <VerticalStackLayout
            Margin="20"
            WidthRequest="300">

                <Label
                Style="{StaticResource FlyoutText}"
                x:Name="nikiText"
                FontAttributes="Bold"
                />

                <Image
                Source="niki.png"
                HeightRequest="250"
                WidthRequest="250"
                />

                <Label
                Style="{StaticResource FlyoutText}"
                x:Name="nikiAlbum"/>

                <Label
                Style="{StaticResource FlyoutText}"
                x:Name="nikiFavorite"
                FontAttributes="Italic"
                />

            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>